<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tollbar_home">
    </include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btnLibrettoProfilo"
            android:text="Libretto universitario"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#050505"
            android:shadowDx="-1"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnDatiPersonaliProfilo"
            android:text="Dati personali"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#050505"
            android:shadowDx="-1"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnShareAppuntiProfilo"
            android:text="Condividi materiale"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#050505"
            android:shadowDx="-1"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</LinearLayout>